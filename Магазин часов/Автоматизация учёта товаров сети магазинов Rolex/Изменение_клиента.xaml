        <TextBox HorizontalAlignment="Left" Height="23" Margin="60,41,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="Адрес1" Content="Адрес:" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Height="26"/>
        <Label x:Name="ФИО1" Content="ФИО:" HorizontalAlignment="Left" Margin="16,13,0,0" VerticalAlignment="Top" Height="26"/>
        <Label x:Name="Пароль1" Content="Пароль:" HorizontalAlignment="Left" Margin="1,162,0,0" VerticalAlignment="Top" Height="26"/>
        <Label x:Name="Логин1" Content="Логин:" HorizontalAlignment="Left" Margin="9,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.174,1.769" Height="26"/>
