            </Button.RenderTransform>
        </Button>
        <Button x:Name="Сохранить" Content="Сохранить" HorizontalAlignment="Left" Margin="29,196,0,0" VerticalAlignment="Top" Width="96" Height="26" Background="#FF265F87" Foreground="White" RenderTransformOrigin="0.5,0.5" Click="Сохранить_Click">
