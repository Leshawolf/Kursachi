        xmlns:local="clr-namespace:Автоматизация_учёта_товаров_сети_магазинов_Rolex"
        mc:Ignorable="d"
        Title="Изменение_клиента" Height="262" Width="292">
    <Grid Margin="0,-2,0,2">
        <TextBox x:Name="ФИО2" HorizontalAlignment="Left" Height="23" Margin="61,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="207"/>
